<div ng-app="myApp" ng-controller="peopleCtrl">
  <form>
    <ul>
      <li class="err" ng-repeat="error in errors"> {{ error}} </li>
    </ul>
    <ul>
      <li class="info" ng-repeat="msg in msgs"> {{ msg}} </li>
    </ul>
    <h2>Fill out Form</h2>
    <div>
      <label>First Name</label>
      <input type="text" ng-model="first_name" placeholder="First Name" style='margin-left: 22px;'>
    </div>
    <div>
      <label>Last Name</label>
      <input type="text" ng-model="last_name" placeholder="Last Name" style='margin-left: 22px;'>
    </div>
    <div>
      <label>Email</label>
      <input type="text" ng-model="email" placeholder="Email" style='margin-left: 22px;'>
    </div>
    <button ng-click='createPerson();' style='margin-left: 63px;margin-top:10px'>Submit</button>
  </form>

  <ul>
    <li ng-repeat="x in myData">
      {{ x.first_name + ', ' + x.last_name }}
    </li>
  </ul>

</div>
